{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Workout",
    "description": "Схема для описания тренировки",
    "type": "object",
    "properties": {
        "slug": {
            "type": "string",
            "description": "Уникальный идентификатор тренировки",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
            "readOnly": true
        },
        "title": {
            "type": "string",
            "description": "Название тренировки"
        },
        "type": {
            "type": "string",
            "enum": [
                "WARMUP",
                "POSTURE",
                "STRENGTH",
                "MOBILITY"
            ],
            "description": "Тип тренировки"
        },
        "durationMinutes": {
            "type": "integer",
            "minimum": 1,
            "description": "Длительность тренировки в минутах"
        },
        "difficulty": {
            "type": "string",
            "enum": [
                "EASY",
                "MEDIUM",
                "HARD"
            ],
            "description": "Сложность тренировки"
        },
        "equipment": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Список необходимого инвентаря"
        },
        "description": {
            "type": "string",
            "description": "Описание тренировки",
            "nullable": true
        },
        "videoUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL видео с тренировкой",
            "nullable": true
        },
        "muscles": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "LEGS",
                    "GLUTES",
                    "UPPER_BODY",
                    "BACK",
                    "PELVIC_FLOOR"
                ]
            },
            "description": "Список задействованных групп мышц"
        }
    },
    "required": [
        "title",
        "type",
        "durationMinutes",
        "difficulty",
        "equipment",
        "muscles"
    ],
    "additionalProperties": false
}